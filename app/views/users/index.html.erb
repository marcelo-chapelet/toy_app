
<p id="notice"><%= notice %></p>
<div class="application-area">
<div class="panel panel-default">
  <div class="panel-heading">  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  Users</div>
  <div class="panel-body">


    <table class="table">
      <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>  <span class="glyphicon glyphicon-search" aria-hidden="true"></span> <%= link_to 'Show', user %>  </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

      <%= will_paginate @users %>
      </tbody>

    </table>

  </div>


</div>
<div>
  <button type="button" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <%= link_to 'Add', new_user_path %>
  </button>
</div>

</div>


